<header class="navbar">
    <a href="https://www.futuretechrating.ch/<%= I18n.locale %>" class="banner">
    <span class="banner-text"><%=t("banner_text")%></span><i class="icon ph ph-arrow-up-right"></i>
    </a>
  <div class="content-center">
    <div class="brand">
    <%= link_to people_path, class:"logo" do %>
      <span class="sr-only">CH++</span>
    <% end %>
    </div>

    <ul class="nav-main">
      <li><%= link_to t("navigation.home"), people_path, class: active_class_for_home %></li>
      <li><%= link_to t("navigation.how_it_works"), detail_path, class: "#{'active' if current_page?(detail_path)}" %></li>
